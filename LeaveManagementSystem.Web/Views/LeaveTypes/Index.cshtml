@model IEnumerable<LeaveTypeReadOnlyVM>

@* IEnumerable is a base class for collection.
this is collection is of LeaveType *@

@* At its core, Model Binding in ASP.NET MVC is just about:
Taking the input data from a form (or URL), 
and putting it into a C# object (the model) 
so your code can work with it easily. *@


@* 
<a asp-action="Create" class="btn btn-primary">Create New</a>
This tells Razor to generate a link to the Create() action method of the current controller.
*@


@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    @* normal blue *@
    <a asp-action="Create" class="btn btn-primary" >Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfDays)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfDays)
            </td>
            <td>
                    @* yellow *@
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                    @* light blue *@
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                    @* red *@
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
