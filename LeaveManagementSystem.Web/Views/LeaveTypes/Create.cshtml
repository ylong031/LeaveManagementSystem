@model LeaveManagementSystem.Web.Data.LeaveType

@{
    ViewData["Title"] = "Create Leave Type";
}

<h1>Create Leave Type</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">       @*  point towards the form 'create' *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div> @* show error message *@
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label> 
                <input asp-for="Name" class="form-control" /> 
                <span asp-validation-for="Name" class="text-danger"></span> @* show error message *@
            </div>
            <br/>
            <div class="form-group">
                <label asp-for="NumberOfDays" class="control-label"></label>
                <input asp-for="NumberOfDays" class="form-control" />
                <span asp-validation-for="NumberOfDays" class="text-danger"></span> @* show error message *@
            </div>
            <br />
            <div class="form-group">
                @* green *@
                <input type="submit" value="Create" class="btn btn-success" />
                @* normal blue *@
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
